<h2>Edit the vinyl ad</h2>
<form class="forms" action="/vinyl/{{vinylDetails._id}}/edit" method="post">
  <label>
    Album:
    <input type="text" name="album" value="{{vinylDetails.album}}" />
  </label>
  
  <label>
    Artist:
    <input type="text" name="artist" value="{{vinylDetails.artist}}" />
  </label>

  <label>
    Year:
    <input type="number" name="year" min="1948" max="2022" value="{{vinylDetails.year}}"/>
  </label>

  <label>
    Genre:
    <select name="genre" value="{{vinylDetails.genre}}">
      <option value="Pop">Pop</option>
      <option value="Rock">Rock</option>
      <option value="Indie">Indie</option>
      <option value="Jazz">Jazz</option>
      <option value="Metal">Metal</option>
      <option value="Country">Country</option>
    </select>
  </label>

  <label>
    Condition:
    <input type="radio" name="condition" value="New" value="{{vinylDetails.condition}}" />
    <label>New</label>
    <input type="radio" name="condition" value="Used" />
    <label>Used</label>
  </label>

    <label>
      Description:
     <textarea rows="4" cols="50" name="description">{{vinylDetails.description}}</textarea>
    </label>

  <label>
    Price:
    <input type="number" name="price" min="1" value="{{vinylDetails.price}}" /> â‚¬
  </label>

  <label>
    Edit image:
    <input type="file" name="vinyl-cover-image"/>
    {{!-- <input type="text" name="existingImage" hidden value="{{image}}"> --}}
  </label>

  <button class="btn btn-primary create-form-button" type="submit">Submit</button>
</form>