<h2>Create a new vinyl ad</h2>
<form action="/vinyl/create" method="post">
  <label>
    Album:
    <input type="text" name="album" required />
  </label>

  <label>
    Artist:
    <input type="text" name="artist" required />
  </label>

  <label>
    Year:
    <input type="number" name="year" min="1948" max="2022" />
  </label>

  <label>
    Genre:
    <select name="genre">
      <option value="pop">Pop</option>
      <option value="rock">Rock</option>
      <option value="indie">Indie</option>
      <option value="jazz">Jazz</option>
      <option value="metal">Metal</option>
      <option value="country">Country</option>
    </select>
  </label>

  <label>
    Condition:
    <input type="radio" name="condition" value="new" />
    <label>New</label>
    <input type="radio" name="condition" value="used" />
    <label>Used</label>
  </label>

    <label>
     <textarea rows="4" cols="50" name="description" form="usrform" placeholder="Enter a description..."></textarea>
    </label>

  <label>
    Price:
    <input type="number" name="price" min="1" required /> â‚¬
  </label>

  <label>
    Upload image:
    <form action="/action_page.php">
    <input type="file" id="myFile" name="filename">
    </form>
  </label>

  <input type="submit">

</form>